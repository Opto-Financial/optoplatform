<div>
  <div>
    <h1>
      List of all school events
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new school event
    </h2>

    <form action="/insert_school_event" method="post">
      <div>
        <label for="school_box">
          School
        </label>

        <input type="text" id="school_box" name="query_school">
      </div>

      <div>
        <label for="event_name_box">
          Event name
        </label>

        <input type="text" id="event_name_box" name="query_event_name">
      </div>

      <div>
        <label for="event_start_date_box">
          Event start date
        </label>

        <input type="date" id="event_start_date_box" name="query_event_start_date">
      </div>

      <div>
        <label for="host_box">
          Host
        </label>

        <input type="text" id="host_box" name="query_host">
      </div>

      <div>
        <label for="estimated_cost_box">
          Estimated cost
        </label>

        <input type="text" id="estimated_cost_box" name="query_estimated_cost">
      </div>

      <div>
        <label for="event_end_date_box">
          Event end date
        </label>

        <input type="datetime-local" id="event_end_date_box" name="query_event_end_date">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="school_event_payments_count_box">
          School event payments count
        </label>

        <input type="text" id="school_event_payments_count_box" name="query_school_event_payments_count">
      </div>

      <button>
        Create school event
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          School
        </th>

        <th>
          Event name
        </th>

        <th>
          Event start date
        </th>

        <th>
          Host
        </th>

        <th>
          Estimated cost
        </th>

        <th>
          Event end date
        </th>

        <th>
          User
        </th>

        <th>
          School event payments count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_school_events.each do |a_school_event| %>
      <tr>
        <td>
          <%= a_school_event.id %>
        </td>

        <td>
          <%= a_school_event.school %>
        </td>

        <td>
          <%= a_school_event.event_name %>
        </td>

        <td>
          <%= a_school_event.event_start_date %>
        </td>

        <td>
          <%= a_school_event.host %>
        </td>

        <td>
          <%= a_school_event.estimated_cost %>
        </td>

        <td>
          <%= a_school_event.event_end_date %>
        </td>

        <td>
          <%= a_school_event.user_id %>
        </td>

        <td>
          <%= a_school_event.school_event_payments_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_school_event.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_school_event.updated_at) %> ago
        </td>

        <td>
          <a href="/school_events/<%= a_school_event.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

  <br>

  <div>
    <label for="graduation_date_box">Graduation Date</label>
      
    <input type="date" id="graduation_date_box" name="query_graduation_date">
  </div>
         
  <div>
    <label for="school_box">School</label>
      
    <!--<input type="text" id="school_box" name="query_school">-->
    <select id="school_box"name="query_school">          
          <option value="Kellogg">Kellogg</option>
          <option value="Booth">Booth</option>
          <option value="Other">Other</option>
    </select>
  </div>
         
  <div>
    <label for="international_student_status_box">International Student Status</label>
    <input id="international_student_status_box" name="query_international_student_status" type="checkbox">
  </div>
         
  <div>
    <label for="premba_industry_box">Pre-MBA Industry</label>
      
    <input type="text" id="premba_industry_box" name="query_premba_industry">
  </div>
         
  <div>
    <label for="gender_box">Gender</label>
      
    <input type="text" id="gender_box" name="query_gender">
  </div>
         
  <div>
    <label for="birth_date_box">Birthdate</label>
      
    <input type="date" id="birth_date_box" name="query_birth_date">
  </div>


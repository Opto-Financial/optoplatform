<div>
  <div>
    <h1>
      Budget income #<%= @the_budget_income.id %> details
    </h1>

    <div>
      <div>
        <a href="/budget_incomes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_budget_income/<%= @the_budget_income.id %>">
          Delete budget income
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Income name
      </dt>
      <dd>
        <%= @the_budget_income.income_name %>
      </dd>

      <dt>
        Income amount
      </dt>
      <dd>
        <%= @the_budget_income.income_amount %>
      </dd>

      <dt>
        Income category
      </dt>
      <dd>
        <%= @the_budget_income.income_category_id %>
      </dd>

      <dt>
        First recurrence date
      </dt>
      <dd>
        <%= @the_budget_income.first_recurrence_date %>
      </dd>

      <dt>
        Recurring frequency
      </dt>
      <dd>
        <%= @the_budget_income.recurring_frequency %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_budget_income.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_budget_income.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_budget_income.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit budget income
    </h2>

    <form action="/modify_budget_income/<%= @the_budget_income.id %>"  method="post" >
      <div>
        <label for="income_name_box">
          Income name
        </label>

        <input type="text" id="income_name_box" name="query_income_name" value="<%= @the_budget_income.income_name %>">
      </div>

      <div>
        <label for="income_amount_box">
          Income amount
        </label>

        <input type="text" id="income_amount_box" name="query_income_amount" value="<%= @the_budget_income.income_amount %>">
      </div>

      <div>
        <label for="income_category_id_box">
          Income category
        </label>

        <input type="text" id="income_category_id_box" name="query_income_category_id" value="<%= @the_budget_income.income_category_id %>">
      </div>

      <div>
        <label for="first_recurrence_date_box">
          First recurrence date
        </label>

        <input type="date" id="first_recurrence_date_box" name="query_first_recurrence_date" value="<%= @the_budget_income.first_recurrence_date %>">
      </div>

      <div>
        <label for="recurring_frequency_box">
          Recurring frequency
        </label>

        <input type="text" id="recurring_frequency_box" name="query_recurring_frequency" value="<%= @the_budget_income.recurring_frequency %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_budget_income.user_id %>">
      </div>

      <button>
        Update budget income
      </button>
    </form>
  </div>
</div>

<hr>

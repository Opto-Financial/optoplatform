<hr>

    <form role="form" action="/modify_budget_income/<%= @the_budget_income.id %>"  method="post" >

    <div class="row mb-30">
      <div class="col-xs-12 col-md-12 col-lg-6 mb-20">
        <div class="well">
          <h2 class="font700">Edit Income Item</h2>

          <div class="row">

            <div class="form-group">
                <label class="form-label" for="income_name_box">Income Name</label>
                <input type="text" class="form-control" id="income_name_box" name="query_income_name" value="<%= @the_budget_income.income_name %>"/>
            </div>

            <div class="form-group">
                <label class="form-label" for="income_amount_box">Income amount</label>
                <input type="text" class="form-control" id="income_amount_box" name="query_income_amount" value="<%= @the_budget_income.income_amount %>">
            </div>

            <div class="form-group">
                <label class="form-label" for="income_category_id_box">Income category</label>
                <select class="form-control"  id="income_category_id_box" name="query_income_category_id">
                    <option value="Select One">Select One</option>
                    <option value=86>Wages</option>
                    <option value=87>Other</option>
                    <option value=82>Interest & Dividends</option>
                    <option value=83>Retirement & Pension</option>
                    <option value=84>Tax Refund</option>
                    <option value=85>Unemployment</option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label" for="recurring_frequency_box">Recurring frequency</label>
                <select class="form-control" id="recurring_frequency_box"name="query_recurring_frequency">
                  <option value="Select One">Select One</option>
                  <option value="1">One-Time</option>
                  <option value="52">Weekly</option>
                  <option value="26">Biweekly</option>
                  <option value="12">Monthly</option>
                  <option value="4">Quarterly</option>
                </select>
              </div>

            <div class="form-group">
                <label class="form-label" for="first_recurrence_date_box">First recurrence date</label>
                <input type="text" class="form-control datepicker-here" id="first_recurrence_date_box" name="query_first_recurrence_date" value="<%= @the_budget_income.first_recurrence_date %>">
            </div>

          </div>

          <div class="row mt-30">
          
              <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-4">
              <!--<div class="col-xs-12 col-sm-6 col-sm-offset-6 col-md-6 col-md-offset-6 col-lg-6 col-lg-offset-6 col-xl-4 col-xl-offset-8">-->
                  <input type="submit" value="Update" class="btn btn-primary" />
              </div>
          </div>

        </div>
      </div>
    </div>

    </form>



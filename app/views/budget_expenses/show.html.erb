<div>
  <div>
    <h1>
      Budget expense #<%= @the_budget_expense.id %> details
    </h1>

    <div>
      <div>
        <a href="/budget_expenses">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_budget_expense/<%= @the_budget_expense.id %>">
          Delete budget expense
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Expense name
      </dt>
      <dd>
        <%= @the_budget_expense.expense_name %>
      </dd>

      <dt>
        Expense amount
      </dt>
      <dd>
        <%= @the_budget_expense.expense_amount %>
      </dd>

      <dt>
        Expense category
      </dt>
      <dd>
        <%= @the_budget_expense.expense_category_id %>
      </dd>

      <dt>
        Recurring frequency
      </dt>
      <dd>
        <%= @the_budget_expense.recurring_frequency %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_budget_expense.user_id %>
      </dd>

      <dt>
        First recurrence date
      </dt>
      <dd>
        <%= @the_budget_expense.first_recurrence_date %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_budget_expense.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_budget_expense.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit budget expense
    </h2>

    <form action="/modify_budget_expense/<%= @the_budget_expense.id %>"  method="post" >
      <div>
        <label for="expense_name_box">
          Expense name
        </label>

        <input type="text" id="expense_name_box" name="query_expense_name" value="<%= @the_budget_expense.expense_name %>">
      </div>

      <div>
        <label for="expense_amount_box">
          Expense amount
        </label>

        <input type="text" id="expense_amount_box" name="query_expense_amount" value="<%= @the_budget_expense.expense_amount %>">
      </div>

      <div>
        <label for="expense_category_id_box">
          Expense category
        </label>

        <input type="text" id="expense_category_id_box" name="query_expense_category_id" value="<%= @the_budget_expense.expense_category_id %>">
      </div>

      <div>
        <label for="recurring_frequency_box">
          Recurring frequency
        </label>

        <input type="text" id="recurring_frequency_box" name="query_recurring_frequency" value="<%= @the_budget_expense.recurring_frequency %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_budget_expense.user_id %>">
      </div>

      <div>
        <label for="first_recurrence_date_box">
          First recurrence date
        </label>

        <input type="date" id="first_recurrence_date_box" name="query_first_recurrence_date" value="<%= @the_budget_expense.first_recurrence_date %>">
      </div>

      <button>
        Update budget expense
      </button>
    </form>
  </div>
</div>

<hr>

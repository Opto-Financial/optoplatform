<header class="header">
  <div class="header-container">
    <a href="/home" class="logo"></a>
    <%= render "shared/navbar" %>
  </div>
</header>


<body class="left-menu-hide">

    <section class="content">
        <div class="content-container">

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-sm-offset-0 col-md-12  col-md-offset-0 col-lg-12 col-lg-offset-0 col-xl-10 col-xl-offset-1">

                    <!-- ./row-->

        <div>
          <div>
            <h1>
              Budget Expense Details
            </h1>

            <div>
              <div>
                <a href="/budget_expenses" class="link">
                  Go back
                </a>
              </div>
            </div>

          </div>
        </div>

<hr>


    <form role="form" action="/modify_budget_expense/<%= @the_budget_expense.id %>"  method="post" >

    <div class="row mb-30">
      <div class="col-xs-12 col-md-12 col-lg-6 mb-20">
        <div class="well">
          <h2 class="font700">Edit Budget Expense</h2>

          <div class="row">

            <div class="form-group">
                <label class="form-label" for="expense_name_box">Expense Name</label>
                <input type="text" class="form-control" id="expense_name_box" name="query_expense_name" value="<%= @the_budget_expense.expense_name %>"/>
            </div>

            <div class="form-group">
                <label class="form-label" for="expense_amount_box">Expense amount</label>
                <input type="text" class="form-control" id="expense_amount_box" name="query_expense_amount" value="<%= @the_budget_expense.expense_amount %>">
            </div>

            <div class="form-group">
                <label class="form-label" for="expense_category_id_box">Expense category</label>
                <select class="form-control" id="expense_category_id_box"name="query_expense_category_id">
                    <option value="Select One">Select One</option>
                    <option value=1>Auto & Transportation</option>
                    <option value=2>Bills & Utilities</option>
                    <option value=3>Debt Payments</option>
                    <option value=4>Dining & Drinking</option>
                    <option value=5>Education</option>
                    <option value=6>Entertainment</option>
                    <option value=7>Fitness & Personal Care</option>
                    <option value=8>Gifts & Donationse</option>
                    <option value=9>Government</option>
                    <option value=10>Groceries</option>
                    <option value=11>Health & Insurance</option>
                    <option value=12>Home</option>
                    <option value=13>Pets</option>
                    <option value=14>Rent & Mortgage</option>
                    <option value=15>Services</option>
                    <option value=16>Shopping</option>
                    <option value=17>Travel</option>
                    <option value=18>Other</option>
                  </select>
              </div>

              <div class="form-group">
                <label class="form-label" for="recurring_frequency_box">Recurring frequency</label>
                <select class="form-control" id="recurring_frequency_box"name="query_recurring_frequency">
                  <option value="Select One">Select One</option>
                  <option value="1">One-Time</option>
                  <option value="52">Weekly</option>
                  <option value="26">Biweekly</option>
                  <option value="12">Monthly</option>
                  <option value="4">Quarterly</option>
                </select>
              </div>

              <div class="form-group">
                <label class="form-label" for="first_recurrence_date_box">First recurrence date</label>
                <input type="text" class="form-control datepicker-here" id="first_recurrence_date_box" name="query_first_recurrence_date" value="<%= @the_budget_expense.first_recurrence_date %>">
              </div>

          </div>

          <div class="row mt-30">
          
              <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-4">
              <!--<div class="col-xs-12 col-sm-6 col-sm-offset-6 col-md-6 col-md-offset-6 col-lg-6 col-lg-offset-6 col-xl-4 col-xl-offset-8">-->
                  <input type="submit" value="Update" class="btn btn-primary" />
              </div>
          </div>

        </div>
      </div>
    </div>

    </form>


<div>
  <div>
    <a href="/delete_budget_expense/<%= @the_budget_expense.id %>">
      Delete budget expense
    </a>
  </div>
</div>

                   
</div>
</div>
</div>

    </section>
    <!-- ./content-->

    <!-- jQuery -->
    <script src="../js/jquery-1.11.1.min.js"></script>

    <!-- Custom Script  -->
    <script src="../js/main.js"></script>

</body>









<header class="header">
  <div class="header-container">
    <a href="/home" class="logo"></a>
    <%= render "shared/navbar" %>
  </div>
</header>

<hr>

<div>
  <div>
    <h1>
      List of all loan comparisons
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new loan comparison
    </h2>

    <form action="/insert_loan_comparison" method="post">
      <div>
        <label for="apr_box">
          Apr
        </label>

        <input type="text" id="apr_box" name="query_apr">
      </div>

      <div>
        <label for="lender_name_box">
          Lender name
        </label>

        <input type="text" id="lender_name_box" name="query_lender_name">
      </div>

      <div>
        <label for="loan_total_cost_box">
          Loan total cost
        </label>

        <input type="text" id="loan_total_cost_box" name="query_loan_total_cost">
      </div>

      <div>
        <label for="monthly_payments_after_school_box">
          Monthly payments after school
        </label>

        <input type="text" id="monthly_payments_after_school_box" name="query_monthly_payments_after_school">
      </div>

      <div>
        <label for="monthly_payments_in_school_box">
          Monthly payments in school
        </label>

        <input type="text" id="monthly_payments_in_school_box" name="query_monthly_payments_in_school">
      </div>

      <div>
        <label for="repayment_period_box">
          Repayment period
        </label>

        <input type="text" id="repayment_period_box" name="query_repayment_period">
      </div>

      <div>
        <label for="total_loan_amount_box">
          Total loan amount
        </label>

        <input type="text" id="total_loan_amount_box" name="query_total_loan_amount">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create loan comparison
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Apr
        </th>

        <th>
          Lender name
        </th>

        <th>
          Loan total cost
        </th>

        <th>
          Monthly payments after school
        </th>

        <th>
          Monthly payments in school
        </th>

        <th>
          Repayment period
        </th>

        <th>
          Total loan amount
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_loan_comparisons.each do |a_loan_comparison| %>
      <tr>
        <td>
          <%= a_loan_comparison.id %>
        </td>

        <td>
          <%= a_loan_comparison.apr %>
        </td>

        <td>
          <%= a_loan_comparison.lender_name %>
        </td>

        <td>
          <%= a_loan_comparison.loan_total_cost %>
        </td>

        <td>
          <%= a_loan_comparison.monthly_payments_after_school %>
        </td>

        <td>
          <%= a_loan_comparison.monthly_payments_in_school %>
        </td>

        <td>
          <%= a_loan_comparison.repayment_period %>
        </td>

        <td>
          <%= a_loan_comparison.total_loan_amount %>
        </td>

        <td>
          <%= a_loan_comparison.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_loan_comparison.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_loan_comparison.updated_at) %> ago
        </td>

        <td>
          <a href="/loan_comparisons/<%= a_loan_comparison.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

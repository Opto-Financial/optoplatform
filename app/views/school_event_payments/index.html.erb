<header class="header">
  <div class="header-container">
    <a href="/home" class="logo"></a>
    <%= render "shared/navbar" %>
  </div>
</header>

<hr>

<div>
  <div>
    <h1>
      List of all school event payments
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new school event payment
    </h2>

    <form action="/insert_school_event_payment" method="post">
      <div>
        <label for="payment_due_datetime_box">
          Payment due datetime
        </label>

        <input type="datetime-local" id="payment_due_datetime_box" name="query_payment_due_datetime">
      </div>

      <div>
        <label for="payment_amount_box">
          Payment amount
        </label>

        <input type="text" id="payment_amount_box" name="query_payment_amount">
      </div>

      <div>
        <label for="school_event_id_box">
          School event
        </label>

        <input type="text" id="school_event_id_box" name="query_school_event_id">
      </div>

      <button>
        Create school event payment
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Payment due datetime
        </th>

        <th>
          Payment amount
        </th>

        <th>
          School event
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_school_event_payments.each do |a_school_event_payment| %>
      <tr>
        <td>
          <%= a_school_event_payment.id %>
        </td>

        <td>
          <%= a_school_event_payment.payment_due_datetime %>
        </td>

        <td>
          <%= a_school_event_payment.payment_amount %>
        </td>

        <td>
          <%= a_school_event_payment.school_event_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_school_event_payment.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_school_event_payment.updated_at) %> ago
        </td>

        <td>
          <a href="/school_event_payments/<%= a_school_event_payment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
